# Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Application Settings
APP_NAME="GenAI Workflow API"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
HOST="0.0.0.0"
PORT=8000

# API Configuration
API_VERSION="v1"
API_PREFIX="/api/v1"
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Database Configuration (if needed)
# DATABASE_URL="sqlite:///./app.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Redis Configuration (if needed for caching)
# REDIS_URL="redis://localhost:6379/0"

# Vector Store Configuration
# FAISS_INDEX_PATH="./data/faiss_index"
# VECTOR_DIMENSION=1536  # for OpenAI text-embedding-ada-002

# Search Configuration
BM25_K1=1.2
BM25_B=0.75

# OpenTelemetry Configuration
OTEL_SERVICE_NAME="genai-workflow-api"
OTEL_SERVICE_VERSION="0.1.0"
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
# OTEL_EXPORTER_JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# External Service URLs
# EXTERNAL_API_BASE_URL="https://api.example.com"
# WEBHOOK_SECRET="your-webhook-secret"

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=[".txt", ".pdf", ".docx", ".md"]
STORAGE_PATH="./storage"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Email Configuration (if needed)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USERNAME="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="your-email@gmail.com"

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=true

# Development Tools
RELOAD=true  # uvicorn auto-reload in development
WORKERS=1    # number of uvicorn workers
